# ⚠️ IMPORTANTE: Copie este arquivo para .env e preencha com suas credenciais
# NUNCA commite o arquivo .env com credenciais reais!

# Tipo de banco de dados (sqlite ou mysql)
DB_TYPE=mysql

# Configuração MySQL
MYSQL_HOST=SEU_HOST_AQUI
MYSQL_PORT=3306
MYSQL_DATABASE=SEU_DATABASE_AQUI
MYSQL_USER=SEU_USUARIO_AQUI
MYSQL_PASSWORD=SUA_SENHA_AQUI

# API Keys
API_KEY=SUA_API_KEY_AQUI
SHARED_SECRET=SEU_SHARED_SECRET_AQUI

# Admin padrão (altere após primeiro login)
ADMIN_DEFAULT_USER=admin
ADMIN_DEFAULT_PASSWORD=admin123

# SMTP (opcional)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=SEU_EMAIL_AQUI
SMTP_PASSWORD=SUA_SENHA_EMAIL_AQUI
SMTP_FROM_EMAIL=SEU_EMAIL_AQUI
SMTP_FROM_NAME=Sistema de Licenciamento

